@model List<HealthStatusService.Models.HealthCheckViewModel>
@{
    ViewBag.Title = "Health Status";
}

<h2>Health Check Results</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Service</th>
            <th>Check Time</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ServiceName</td>
                <td>@item.CheckTime.ToString("yyyy-MM-dd HH:mm:ss")</td>
                <td>
                    @if (item.Status == "OK")
                    {
                        <span style="color:green;font-weight:bold">OK</span>
                    }
                    else
                    {
                        <span style="color:red;font-weight:bold">NOT_OK</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h3>Status Overview</h3>
<canvas id="statusChart" width="400" height="200"></canvas>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    var ctx = document.getElementById('statusChart').getContext('2d');
    var chart = new Chart(ctx, {
        type: 'pie',
        data: {
            labels: ['OK', 'NOT_OK'],
            datasets: [{
                data: [
                    @Model.Count(x => x.Status == "OK"),
                    @Model.Count(x => x.Status == "NOT_OK")
                ],
                backgroundColor: ['#28a745', '#dc3545']
            }]
        }
    });
</script>
